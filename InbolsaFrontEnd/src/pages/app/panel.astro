---
export const prerender = true;
import AppLayout from '../../layouts/AppLayout.astro';

/** Catálogo EXACTO que ya usábamos (ids deben coincidir con la landing) */
const CATALOG = [
  { cat: 'Sacos PP', items: [
    { id:'sacos-convencionales',   name:'Sacos Convencionales',   img:'/img/bolsa-chica.jpg' },
    { id:'sacos-red', name:'Sacos de red', img:'/img/bolsa-mediana.jpg' },
    { id:'sacos-laminados',  name:'Sacos laminados',  img:'/img/bolsa-enorme.jpg' },
    { id:'sacos-laminacion-premium',  name:'Sacos con laminacion premium',  img:'/img/bolsa-enorme.jpg' },
    { id:'sacos-planos',  name:'Sacos planos',  img:'/img/bolsa-enorme.jpg' },
