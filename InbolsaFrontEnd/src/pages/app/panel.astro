    { id:'big-bag-u-panel',    name:'Big Bag U Panel',   img:'/img/hilo-nylon.jpg' },
    { id:'big-bag-cuadripanel',    name:'Big Bag cuadripanel',   img:'/img/hilo-nylon.jpg' },
    { id:'big-bag-compartimentada',    name:'Big Bag compartimentada',   img:'/img/hilo-nylon.jpg' },
