    icon: null,
    image: asset('/img/industrias/alimentacion.webp'),
    color: 'from-blue-500 to-cyan-600',
    dotColor: 'bg-blue-500',
    bgColor: 'bg-blue-50',
    borderColor: 'border-blue-200',
    textColor: 'text-blue-700',
    products: ['Sacos alimentarios', 'Sacos con termino e impresión premium', 'Sacos laminados o con liner interior'],
