    icon: null,
    image: asset('/img/industrias/construccion.webp'),
    color: 'from-orange-500 to-red-600',
    dotColor: 'bg-orange-400',
    bgColor: 'bg-orange-50',
    borderColor: 'border-orange-200',
    textColor: 'text-orange-700',
    products: ['Sacos con fondo cuadrado y válvula interior', 'Geotextiles', 'Telas con ventilaciones'],
    applications: ['Cemento Portland y especiales', 'Agregados y áridos', 'Yeso y cal', 'Morteros secos', 'Escombros y residuos', 'Materiales de demolición'],
