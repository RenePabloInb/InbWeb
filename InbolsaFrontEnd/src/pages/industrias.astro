    icon: null,
    image: asset('/img/industrias/metales.webp'),
    color: 'from-slate-600 to-slate-800',
    dotColor: 'bg-slate-500',
    bgColor: 'bg-slate-50',
    borderColor: 'border-slate-200',
    textColor: 'text-slate-700',
    products: ['Sacos de alta resistencia', 'Big Bag con refuerzos', 'Sacos planos metaleros'],
    applications: ['Litio y minerales preciosos', 'Concentrados mineros', 'Productos petroquímicos', 'Químicos a granel', 'Resinas y polímeros', 'Pigmentos industriales'],
    benefits: ['Factor de seguridad 5:1 y 6:1', 'Materiales antiestáticos', 'Resistencia química superior', 'Certificaciones internacionales']
  },
  {
    name: 'Construcción',
    desc: 'Resistencia y durabilidad garantizada',
