---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import InteractiveHoverButton from '../components/InteractiveHoverButton.astro';
import AnimatedCard from '../components/AnimatedCard.astro';

const oficinas = [
  {
    ciudad: 'La Paz',
    direccion: 'Carretera a Viacha s/n (frente a Terminal de buses)',
    telefono: '+591 69999030',
    email: 'info@inbolsa.net',
    horario: 'Lun–Vie 09:00–17:00',
    color: 'from-red-500 to-red-600',
    bgColor: 'bg-red-50',
    borderColor: 'border-red-200',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/></svg>`,
    mapUrl: 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1912.5681588676994!2d-68.17724863967008!3d-16.51921428175109!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x915edf0815c3d821%3A0x27c6c712c4b99ff7!2sINBOLSA%20S.A.!5e0!3m2!1ses-419!2sbo!4v1763525675305!5m2!1ses-419!2sbo'
  },
  {
    ciudad: 'Santa Cruz',
    direccion: 'Parque Industrial Warnes',
    telefono: '+591 69999030',
    email: 'info@inbolsa.net',
    horario: 'Lun–Vie 09:00–17:00',
    color: 'from-emerald-500 to-green-600',
    bgColor: 'bg-emerald-50',
    borderColor: 'border-emerald-200',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/></svg>`,
    mapUrl: 'https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d1848.4929031163115!2d-63.16170155934142!3d-17.527762357313662!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x93ee1faad415f179%3A0xa82d05415068a086!2sINBOLSA%20LTDA.!5e0!3m2!1ses-419!2sbo!4v1763526112762!5m2!1ses-419!2sbo'
  }
];
---

<Base title="Contacto — Inbolsa">
  <Header />

   <main class="bg-gradient-to-b from-white via-red-50/30 to-white">
    <!-- Hero Section Mejorado -->
    <section class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
      <!-- Patrón de fondo animado -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>

      <!-- Círculos decorativos animados - SOLO DESKTOP -->
      <div class="hidden md:block absolute top-20 -left-20 w-96 h-96 bg-red-500/20 rounded-full blur-2xl opacity-50 animate-pulse"></div>
      <div class="hidden md:block absolute bottom-20 -right-20 w-96 h-96 bg-red-400/20 rounded-full blur-2xl opacity-50 animate-pulse" style="animation-delay: 1s;"></div>

      <div class="relative mx-auto max-w-7xl px-4 py-16 md:py-24 lg:py-36">
        <div class="text-center">
          <!-- Badge moderno -->
          <div class="inline-flex items-center gap-3 rounded-full bg-gradient-to-r from-red-500/20 to-sky-500/20 backdrop-blur-xl border border-white/30 px-6 py-3 text-sm text-white shadow-lg">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500 shadow-lg shadow-red-500/50"></span>
            </span>
            <span class="font-medium">Contactanos</span>
          </div>
          <h1 class="mt-6 md:mt-8 text-3xl md:text-5xl lg:text-7xl font-black tracking-tight text-white leading-tight">
            Contacto
            
          </h1>

          <!-- Descripción mejorada -->
          <p class="mt-6 md:mt-8 text-base md:text-xl lg:text-2xl text-white/90 max-w-3xl mx-auto leading-relaxed font-light">
            Estamos disponibles para <strong class="font-semibold text-red-300">atender</strong> tus consultas y <strong class="font-semibold text-red-300">brindarte</strong> la mejor solución para tus necesidades
          </p>
        </div>
      </div>

      <div class="absolute bottom-0 left-0 right-0">
        <svg viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
          <path d="M0 0L60 8.33C120 16.7 240 33.3 360 41.7C480 50 600 50 720 45C840 40 960 30 1080 28.3C1200 26.7 1320 33.3 1380 36.7L1440 40V100H1380C1320 100 1200 100 1080 100C960 100 840 100 720 100C600 100 480 100 360 100C240 100 120 100 60 100H0V0Z" fill="white"/>
        </svg>
      </div>
    </section>

    <!-- WhatsApp Section - Versión discreta mejorada -->
    <section class="py-8 md:py-12">
      <div class="mx-auto max-w-7xl px-4">
        <div class="flex justify-center">
          <a
            href="https://wa.me/59169999030"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-5 bg-white hover:bg-slate-50 border-2 border-slate-200 hover:border-green-500 text-slate-700 hover:text-green-600 px-14 py-7 rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 group"
          >
            <!-- WhatsApp Icon -->
            <svg class="w-12 h-12 text-green-600 group-hover:scale-110 transition-transform duration-300 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>

            <div class="text-left">
              <p class="text-2xl font-bold whitespace-nowrap">WhatsApp: +591 69999030</p>
            </div>

            <!-- Arrow Icon -->
            <svg class="w-8 h-8 opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-all duration-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Formulario y Oficinas -->
    <section class="py-16 md:py-20">
      <div class="mx-auto max-w-7xl px-4">
        <div class="grid lg:grid-cols-5 gap-8 lg:gap-10">
          
          <!-- Formulario -->
          <div class="lg:col-span-3">
            <AnimatedCard variant="default">
              <div class="p-8 md:p-10">
                <form class="space-y-6" action="mailto:info@inbolsa.net" method="post" enctype="text/plain">
                  <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                      <label for="nombre" class="block text-sm font-semibold text-slate-700">
                        Nombre completo *
                      </label>
                      <input 
                        type="text" 
                        id="nombre"
                        name="nombre"
                        required
                        placeholder="Juan Pérez"
                        class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-red-500 focus:ring-4 focus:ring-red-500/10"
                      />
                    </div>

                    <div class="space-y-2">
                      <label for="email" class="block text-sm font-semibold text-slate-700">
                        Email *
                      </label>
                      <input 
                        type="email" 
                        id="email"
                        name="email"
                        required
                        placeholder="juan@empresa.com"
                        class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-red-500 focus:ring-4 focus:ring-red-500/10"
                      />
                    </div>
                  </div>

                  <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                      <label for="telefono" class="block text-sm font-semibold text-slate-700">
                        Teléfono *
                      </label>
                      <input 
                        type="tel" 
                        id="telefono"
                        name="telefono"
                        required
                        placeholder="+591 69999030"
                        class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-red-500 focus:ring-4 focus:ring-red-500/10"
                      />
                    </div>

                    <div class="space-y-2">
                      <label for="empresa" class="block text-sm font-semibold text-slate-700">
                        Empresa
                      </label>
                      <input 
                        type="text" 
                        id="empresa"
                        name="empresa"
                        placeholder="Nombre de tu empresa"
                        class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-red-500 focus:ring-4 focus:ring-red-500/10"
                      />
                    </div>
                  </div>

                  <div class="space-y-2">
                    <label for="ciudad" class="block text-sm font-semibold text-slate-700">
                      Ciudad de interés *
                    </label>
                    <select 
                      id="ciudad"
                      name="ciudad"
                      required
                      class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 outline-none transition-all focus:border-red-500 focus:ring-4 focus:ring-red-500/10"
                    >
                      <option value="">Selecciona una ciudad</option>
                      <option value="la-paz">La Paz</option>
                      <option value="santa-cruz">Santa Cruz</option>
                      <option value="otra">Otra ciudad</option>
                    </select>
                  </div>

                  <div class="space-y-2">
                    <label for="mensaje" class="block text-sm font-semibold text-slate-700">
                      Mensaje *
                    </label>
                    <textarea 
                      id="mensaje"
                      name="mensaje"
                      required
                      rows="6"
                      placeholder="Cuéntanos sobre tu proyecto o necesidad..."
                      class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-red-500 focus:ring-4 focus:ring-red-500/10 resize-none"
                    ></textarea>
                  </div>

                  <div class="flex items-start gap-3">
                    <input 
                      type="checkbox" 
                      id="acepto"
                      required
                      class="mt-1 h-4 w-4 rounded border-slate-300 text-red-600 focus:ring-red-500"
                    />
                    <label for="acepto" class="text-sm text-slate-600">
                      Acepto la política de privacidad y el tratamiento de mis datos personales
                    </label>
                  </div>

                  <InteractiveHoverButton 
                    variant="primary"
                    size="lg"
                    class="w-full"
                  >
                    Enviar mensaje
                  </InteractiveHoverButton>

                  <p class="text-center text-sm text-slate-500">
                    * Campos obligatorios
                  </p>
                </form>
              </div>
            </AnimatedCard>
          </div>

          <!-- Oficinas -->
          <div class="lg:col-span-2 space-y-6">
            <AnimatedCard variant="default">
              <div class="p-8">
                <h3 class="text-2xl font-bold text-slate-900 mb-6">
                  Nuestras oficinas
                </h3>
                
                <div class="space-y-6">
                  {oficinas.map((oficina) => (
                    <div class="group relative rounded-2xl border-2 border-slate-200 p-6 hover:border-red-300 transition-all hover:shadow-lg overflow-hidden">
                      <div class={`absolute inset-0 bg-gradient-to-br ${oficina.color} opacity-0 group-hover:opacity-5 transition-opacity`}></div>
                      
                      <div class="relative">
                        <div class="flex items-center gap-3 mb-4">
                          <div class={`w-12 h-12 rounded-xl ${oficina.bgColor} border-2 ${oficina.borderColor} flex items-center justify-center text-slate-700`}>
                            <div set:html={oficina.icon}></div>
                          </div>
                          <h4 class="text-xl font-bold text-slate-900">{oficina.ciudad}</h4>
                        </div>
                        
                        <div class="space-y-3 text-sm text-slate-600">
                          <div class="flex items-start gap-3">
                            <svg class="w-5 h-5 flex-shrink-0 text-slate-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <span>{oficina.direccion}</span>
                          </div>

                          <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 flex-shrink-0 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            <span class="font-semibold">{oficina.telefono}</span>
                          </div>

                          <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 flex-shrink-0 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <span class="font-semibold">{oficina.email}</span>
                          </div>

                          <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 flex-shrink-0 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span>{oficina.horario}</span>
                          </div>
                        </div>

                        {/* Mapa embebido */}
                        <div class="mt-4 rounded-xl overflow-hidden border border-slate-200">
                          <iframe
                            src={oficina.mapUrl}
                            width="100%"
                            height="150"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"
                            title={`Mapa de ${oficina.ciudad}`}
                          ></iframe>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </AnimatedCard>

            <div class="rounded-2xl bg-gradient-to-br from-red-600 to-red-700 p-8 text-white">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-white/10 backdrop-blur flex items-center justify-center">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-lg mb-2">Tiempo de respuesta</h4>
                  <p class="text-white/90 text-sm">
                    Nos comprometemos a responder tu consulta en un máximo de 24 horas hábiles.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Base>
